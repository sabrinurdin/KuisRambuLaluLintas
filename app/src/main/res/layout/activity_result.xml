<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ResultActivity"
    android:background="#F2FAFE"
    android:gravity="center"
    android:paddingHorizontal="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skor Kamu"
        android:textAlignment="center"
        android:textColor="@color/orange_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/ic_trophy"
        />

    <TextView
        android:id="@+id/congratulationsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Selamat, Sabri!"
        android:textAlignment="center"
        android:textColor="@color/blue_tosca"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skor Anda adalah 5 dari 10"
        android:textAlignment="center"
        android:textColor="@color/orange_sky"
        android:textSize="20sp"
        android:paddingVertical="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coba lagi"
        android:textAllCaps="true"
        android:background="@drawable/bg_button_blue"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</LinearLayout>